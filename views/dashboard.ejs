<!DOCTYPE html>
<html lang="en">
<head>
  <title>Dashboard</title>
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/nav.css" type="text/css" />
  <link rel="stylesheet" href="/styles/dashboard.css" type="text/css" />
  <!-- LOCAL SCRIPTS -->
  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
  <!-- BOOTSTRAP CSS -->
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
    integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
    crossorigin="anonymous"
  />
</head>
<body>
  <!-- NAV BAR -->
  <%- include('partials/_header') %>
  <div class="dashboard-container">
  <!-- TAKEN JOBS -->
    <div id="dashboard-taken-jobs">
      <h6>Posted takenJobs</h6>
      <% for (const oddjob of takenJobs) { %>
        <div>oddjob: <%= oddjob.title %>
          <details>
            <ul>
            <% if (oddjob.employer_type===false) { %>
              <li>Type: Individual</li>
            <% } else { %>
              <li>Type: Business</li>
            <% } %>
              <li>Lat: <%= oddjob.lat %></li>
              <li>Lng: <%= oddjob.lng %></li>
              <li>Date: <%= oddjob.date %></li>
              <li>Start Time: <%= oddjob.start_time %></li>
              <li>End Time: <%= oddjob.end_time %></li>
              <li>Pay: <%= oddjob.total_pay %></li>
              <li>Description: <%= oddjob.description %></li>
            </ul>
          </details>
        </div>
      <% } // End takenJobs loop. %>
    </div>
<!-- USER PROFILES -->
    <div class="user-profile">
    <img class="user-picture" src="stockstore.png" alt="fake shop" width="100%" height="120em">
      <div class="user-profile-contents">
        <div class="user-name">Name: <%= user.name %></div>
        <div class="user-email">Email: <%= user.email %></div>
        <div class="user-phone">Phone: <%= user.phone %></div>
        <div class="user-Location">User Location</div>
      </div>
      <!-- button re-directs to singup page with info auto filled? -->
      <button type="submit">Edit User info</button>
      <button type="submit">View Favourites Map</button>
    </div>
<!-- POSTED ODDJOBS -->
  <div id="dashboard-posted-jobs">
    <h6>Posted oddJobs</h6>
    <% for (const oddjob of oddjobs) { %>
      <div>
        oddjob: <%= oddjob.title %>
        <details>
          <ul>
            <% if (oddjob.employer_type===false) { %>
              <li>Type: Individual</li>
            <% } else { %>
              <li>Type: Business</li>
            <% } %>
              <li>Lat: <%= oddjob.lat %></li>
              <li>Lng: <%= oddjob.lng %></li>
              <!-- <li>Location: <%= oddjob.location %></li> -->
              <li>Date: <%= oddjob.date %></li>
              <li>Start Time: <%= oddjob.start_time %></li>
              <li>End Time: <%= oddjob.end_time %></li>
              <li>Pay: <%= oddjob.total_pay %></li>
              <li>Description: <%= oddjob.description %></li>
          </ul>
        </details>
      </div>
    <% } // End oddjobs loop. %>
  </div>
  </div>
</body>
  <!-- FOOTER -->
  <%- include('partials/_footer') %>
  <!-- BOOTSTRAP JS -->
  <%- include('partials/_bootstrapJs') %>
</html>
